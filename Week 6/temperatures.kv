BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            id: cel_to_far
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            text: 'Convert Celsius to Fahrenheit'
            on_press: app.handle_conversion('C')
        Button:
            id: far_to_cel
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            text: 'Convert Fahrenheit to Celsius'
            on_press: app.handle_conversion('F')
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 48
            multiline: False
        Label:
            id: result_output
            font_size: 24
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            color: (255, 255, 0, 1)
            text: 'Enter a number and select conversion button to see result'


