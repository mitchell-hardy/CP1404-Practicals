BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: .4
        Button:
            text: 'Clear'
            on_press: app.clear_button_reset()
        Button:
            id: output_label
            text: 'Greet'
            on_press: app.handle_greet()

    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: input_name
            text: 'name'
        Label:
            text: 'Enter your name'
            color: (1, 1, 0, 1)
