BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
            on_text: app.handle_conversion()

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Convert miles to km'
            on_press: app.handle_conversion()

    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: output_label
            font_size: 48
            color: (255, 255, 0, 1)



